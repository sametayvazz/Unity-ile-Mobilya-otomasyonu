<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/SA_iv_ana_item_foto"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/SA_txt_ana_item_isim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="isim"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/SA_txt_ana_item_fiyat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Fiyat"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/SA_txt_ana_item_aciklama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="cins"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/SA_txt_ana_item_kalite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="kalite"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/SA_txt_ana_item_renk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="renk"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/SA_txt_ana_item_sehir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ÅŸehir"
            android:textColor="#000000"/>
    </LinearLayout>
</LinearLayout>